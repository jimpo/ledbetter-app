{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 16",

	"compilerOptions": {
		"outDir": "dist",
	  	// DOM is required for WebAssembly even though it's too much
		"lib": ["ES2021", "DOM"],
		"module": "commonjs",
		"target": "es2021",

		"strict": true,
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
